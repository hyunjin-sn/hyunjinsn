* @작성일자	   		2019.07.01
* @수정자	   
* @수정일자
*/
this.fn_ok = function()
{
	var CODE = "";
	var CODE_NAME = "";
	var CODE_ETC = "";
	
 	for (i=0; i < this.ds_list_1.rowcount; i++)
	{
		if (this.ds_list_1.getColumn(i,"CHK") == 1)
		{
			if (this.gfn_isNull(CODE))
			{
				CODE = this.ds_list_1.getColumn(i,"CODE")
			} else
			{
				CODE += ","+this.ds_list_1.getColumn(i,"CODE")
			}
			

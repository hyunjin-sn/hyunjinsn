include "Lib::sz_fsp_nx.xjs";
this.objApp = nexacro.getApplication();
var head_1 = this.getOwnerFrame().head_1;
var head_2 = this.getOwnerFrame().head_2;
var head_3 = this.getOwnerFrame().head_3;

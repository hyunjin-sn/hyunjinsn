			} else
			{
				CODE_ETC += ","+this.ds_list_4.getColumn(i,"CODE_ETC")
			}
		}	
	}
	//trace(CODE+":"+CODE_NAME+":"+CODE_ETC);
	this.close(CODE+":"+CODE_NAME+":"+CODE_ETC);
};


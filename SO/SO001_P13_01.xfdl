          <Column id="huil_chk" type="STRING" size="1"/>
        </ColumnInfo>
      </Dataset>
    </Objects>
    <Bind>
      <BindItem id="item0" compid="TextArea00" propid="value" datasetid="ds_list_1" columnid="MSG_TEXT"/>
    </Bind>
  </Form>

        <CheckBox id="chk_fax" taborder="2" text="팩스 발송여부" left="56" top="104" width="150" height="20"/>
        <CheckBox id="chk_call" taborder="3" text="오토콜 발송여부" left="56" top="134" width="150" height="20"/>
